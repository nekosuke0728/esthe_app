<p id="notice"><%= notice %></p>

<h1>Salons</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @salons.each do |salon| %>
      <tr>
        <td><%= salon.name %></td>
        <td><%= salon.description %></td>
        <td><%= salon.latitude %></td>
        <td><%= salon.longitude %></td>
        <td><%= link_to 'Show', staff_salon_path(salon) %></td>
        <td><%= link_to 'Edit', edit_staff_salon_path(salon) %></td>
        <td><%= link_to 'Destroy', staff_salon_path(salon), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

