<%= form_with(model: [ :staff, esthe_menu], local: true) do |f| %>
  <% if esthe_menu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(esthe_menu.errors.count, "") %> 件のエラーがあります。</h2>

      <ul>
      <% esthe_menu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <br>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, id: :esthe_menu_name %>
  </div>

  <br>

  <div class="field">
    <%= f.label :time_frame %>
    <%= f.hidden_field :time_frame, :value => "60" %>
    60 分
  </div>

  <br>

  <div class="field">
    <%= f.label :price %>
    <%= f.number_field :price, id: :esthe_menu_price %>
  </div>

  <br>

  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description, id: :esthe_menu_description %>
  </div>

  <br>

  <div class="actions btn-box">
    <%= link_to '戻る', staff_esthe_menus_path %>
    <%= f.submit class: "btn btn-primary btn-sm btn-right" %>
  </div>
<% end %>
