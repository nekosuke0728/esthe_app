<div class="main-contents">

  <h1>エステメニュー一覧</h1>

  <div class="btn-box">
    <%= link_to '新規作成', new_staff_esthe_menu_path, class: "btn btn-primary btn-sm btn-right" %>
  </div>
  <div class="table-responsive">
    <table  id="table" class="table table-condensed table-hover">
    <thead>
      <tr>
        <th>メニュー名</th>
        <th>時間</th>
        <th>金額</th>
        <th colspan="3"></th>
      </tr>
    </thead>
      <tbody>
        <% @esthe_menus.each do |esthe_menu| %>
          <tr>
            <td><%= esthe_menu.name %></td>
            <td><%= esthe_menu.time_frame %>分</td>
            <td>¥<%= esthe_menu.price %></td>
            <td class="btn-in-table"><%= link_to '編集', edit_staff_esthe_menu_path(id: esthe_menu.id), class: "btn btn-info btn-sm" %></td>
            <td class="btn-in-table"><%= link_to '削除', staff_esthe_menu_path(esthe_menu.id), method: :delete, data: { confirm: '削除してよろしいですか?' }, class: "btn btn-danger btn-sm" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
