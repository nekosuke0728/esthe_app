<div class="panel panel-default devise-bs">
  <div class="panel-heading">
    <h4><%= t('.sign_in', default: 'ログイン') %></h4>
  </div>
  <div class="panel-body">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { role: 'form' }) do |f| %>
      <p style="color: red;"><strong>テストユーザーとしてこのままログインすることができます。</strong></p>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control', value: "staff1@example.com" %>
      </div>
      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: 'off', class: 'form-control', value: "password" %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="checkbox">
          <%= f.label :remember_me do %>
            <%= f.check_box :remember_me %> <%= t('.remember_me', default: 'パスワードを記憶') %>
          <% end %>
        </div>
      <% end %>
      <%= f.submit  t('.sign_in', default: 'ログイン'), class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>
<%= render "staffs/shared/links" %>
