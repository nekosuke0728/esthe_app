<div class="main-contents">
  <h1>予約日時選択</h1>
  <table class="table-bordered">
    <thead>
      <tr>
        <th></th>
        <% (@start_day..@end_day).each do |date| %>
          <th><%= l date, format: :custom %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "calendar", locals: {start_day: @start_day, end_day: @end_day} %>
    </tbody>
  </table>
</div>

<style>
  table tr, table td {
    padding: 10px;
  }
</style>
